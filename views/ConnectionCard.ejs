<% include partials/header.ejs %>


<div class='container'>
    <div class='row CCShortD'>
         <h1>Become a Member of St James</h1>
        <div class='col-lg-6'>
                <h2>Are you Interested?</h2>
                <p>Enter your email and receive information about St James and the congregation.</p>
        </div>
        <div class='col-lg-6'>
             <form action='/ConnectionCard' method='POST' role='form'>
                <div class='form-group'>
                    <label>Email:</label>
                    <input class='form-control' name='email' type='Email' placeholder='Enter your Email Address' required>
                </div>
                <div class='form-group'>
                    <button type='submit' class='btn btn-lg btn-danger btn-block'>Submit</button>
                </div>
            </form>
           
        </div>
            
         <h1 style='text-align: center; padding: 10px'>OR</h1>
    </div>
    <div class='row CCShortD'>
        <div class='col-lg-6'>
            <h1>Connection Card</h1>
            <p>Please fill out this form to let us know more about yourself and what you are looking for in a Church Home.</p>
        </div>
        <div class='col-lg-6'>
            <form action='/ConnectionCard' method='POST' role='form'>
                <div class='form-group'>
                    <label>Name:</label>
                    <input class='form-control' name='name' type='text' placeholder='Enter your Name' required>
                </div>
                <div class='form-group'>
                    <label>Email:</label>
                    <input class='form-control' name='email' type='email' placeholder='Enter your Email' required>
                </div>
                <div class='form-group'>
                    <label>Gender: </label></br>
                        <label class='radio-inline'>
                            <input type='radio' name='gender' id='GenderRadio1' value='male'>Male
                        </label>
                         <label class='radio-inline'>
                            <input type='radio' name='gender' id='GenderRadio2' value='Female'>Female
                        </label>
                </div>
                 <div class='form-group'>
                    <label>Address:</label>
                    <input class='form-control' name='address' type='text' placeholder='Enter your Address (example: 1245 E Bluff)' required>
                </div>
                 <div class='form-group'>
                    <label>City:</label>
                    <input class='form-control' name='city' type='text' placeholder='Enter your City' required>
                </div>
                 <div class='form-group'>
                    <label>State:</label>
                    <input class='form-control' name='state' type='text' placeholder='Enter your State' required>
                </div>
                <div class='form-group'>
                    <label>Zip:</label>
                        <input class='form-control' name='zip' type='text' placeholder='Enter your zip code' required>
                </div>
                <div class='form-group'>
                    <label>Phone:</label>
                        <input class='form-control' name='phone' type='phone' placeholder='(555)-555-5555'>
                </div>
                <div class='form-group'>
                    <label>Church Home</label>
                        <input class='form-control' name='ChurchHome' type='text' placeholder='What is your current church home? If you do not have one please leave area blank.'>
                </div>
                <div class='form-group'>
                    <label>Are you interested in Attending St james? </label></br>
                        <label class='radio-inline'>
                            <input type='radio' name='MBCInterest' id='CCRadio1' value='yes'>Yes
                        </label>
                         <label class='radio-inline'>
                            <input type='radio' name='MBCInterest' id='CCRadio2' value='no'>No
                        </label>
                </div>
                <div class='form-group'>
                    <label>What are you looking for in a church?: </label></br>
                    <textarea class='TextBox' rows='4' cols='50' name='message' placeholder='What are you looking for in a church?' required></textarea>
                </div>
                <div class='form-group'>
                    <button type='submit' class='btn btn-lg btn-danger btn-block'>Submit</button>
                </div>
            </form>
        </div>
    </div>
    
</div>





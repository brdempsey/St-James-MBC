<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Edit <%= event.title %></h1>
        <p>Edit your event to reflect any updates</p>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <div class="eventForm">
                <form action="/events/<%= event._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <label class="newEntLabel">Title:</label>
                        <input class="form-control" type="text" name="event[title]" value="<%= event.title %>" required>
                    </div>
                    <div class="form-group">
                        <label class="newEntLabel">Location:</label>
                        <input class="form-control" type="text" name="event[location]" value="<%= event.location %>" required>
                    </div>
                    <div class="form-group">
                         <label class="newEntLabel">Image:</label>
                         <caption><i>If you do not have an image a default one will be provided once you submit the event.</i></caption>
                        <input id="eventPic" class="form-control" type="text" name="event[image]" value="<%= event.image %>" required>
                    </div>
                    <div class="form-group">
                        <label class="newEntLabel">Date:</label>
                        <input class="form-control" type="date" name="event[date]" value="<%= event.date.toISOString() %>" required>
                    </div>
                    <div class="form-group">
                        <label class="newEntLabel">Time:</label>
                        <input class="form-control" type="time" name="event[time]" value="<%= event.time %>" required>
                    </div>
                    <div class="form-group">
                        <label class="newEntLabel">Description:</label>
                        <textarea class='form-control' rows='4' cols='50' name='event[description]' required><%= event.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button id="eventSubmit" class="btn btn-lg btn-default btn-block btn-primary">Submit</button>   
                    </div>
                </form>
                <a class="btn btn-success" href="/events">Go Back</a>
            </div>
        </div>
    </div>
    
</div>

<script src="/javascript/events.js"></script>
<% include ../partials/footer %>